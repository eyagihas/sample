{% extends "common/portal/base.twig" %}
{% block robots %}
<meta name="robots" content="index,follow">
{% endblock %}
{% block description %}
<meta name="description" content="{% if value.headline.page > 1 %}＜{{value.headline.page}}ページ目＞{% endif %}{{value.city.pref_city}}であなたに合ったインプラント治療ができる歯医者さんが見つかる！インプラントネットプラスがおすすめしたい歯医者を紹介します。インプラント、ワンデイインプラント、オールオン4、オーバーデンチャー、フラップレスインプラントなどインプラント治療を検討中の方はぜひご覧ください。">
{% endblock %}
{% block keyword %}
<meta name="keywords" content="インプラントネットプラス,歯医者さん,おすすめ,インプラント,{{value.city.keyword_str}}">
{% endblock %}
{% block canonical %}
{% if value.headline.canonical != '' %}
<link rel="canonical" href="{{value.headline.canonical}}">
{% endif %}
{% endblock %}
{% block json_ld %}
{% include 'recommend/json_ld_city.html' %}
{% endblock %}
{% block external_js %}
{% endblock %}
{% block title %}{{value.city.pref_city}}でインプラント治療ができるおすすめ歯医者{% if value.headline.page > 1 %}（{{value.headline.page}}ページ目）{% endif %} - インプラントネットプラス - {% endblock %}
{% block last_update_css %}?{{meta.unixtime}}{% endblock %}
{% block last_update_js %}?{{meta.unixtime}}{% endblock %}
{% block body %}

{% include 'common/portal/breadcrumb.html' %}

<!-- contents -->
<div class="contents">
<main class="mainContents">
	<article class="mainContents__wrapper">
		<div class="mainContents__outer">
			<div class="mainContents__title-outer">
				<div class="mainContents__title-wrapper">
					<h1 class="mainContents__title">
						{{value.city.pref_city}}<br class="u-only_sp"><span class="mainContents__title-recommend">でインプラント治療ができる<br class="u-only_sp">おすすめ歯医者</span>
					</h1>
					<span class="mainContents__title-sub">{{value.city.city_sub}}</span>
				</div>
				<div class="areaInfo__img u-only_sp">
					<img src="{{value.city.image_url}}" alt="{{value.city.pref_city}}でインプラント治療ができるおすすめ歯医者の画像">
				</div>
			</div>

		</div>

		<div class="areaInfo__wrapper u-only_pc">
			<div class="areaInfo">
				<div class="areaInfo__img">
					<img src="{{value.city.image_url}}" alt="{{value.city.pref_city}}でインプラント治療ができるおすすめ歯医者の画像">
				</div>
				<div class="areaInfo__text">{{value.city.implant_lead}}</div>
			</div>
		</div>

		<ul class="tabItem__wrapper">
			{% if value.cities|length > 0 %}
			<li class="tabItem tab__area {% if value.type is same as ('pref_area') %}is-active{% endif %}">エリアから探す</li>
			{% endif %}
			{% if value.stations|length > 0 %}
			<li class="tabItem tab__railway {% if value.type is same as ('pref_station') %}is-active{% endif %}">駅から探す</li>
			{% endif %}
		</ul>

		<div class="tabContent_wrapper">
			{% if value.cities|length > 0 %}
			<div class="tabContent tab__area {% if value.type is same as ('pref_area') %}is-display{% endif %}">

				<!-- search -->
				{% include 'recommend/portal_area_list.html' %}
				<!-- /search -->

			</div>
			{% endif %}

			{% if value.stations|length > 0 %}
			<div class="tabContent tab__railway {% if value.type is same as ('pref_station') %}is-display{% endif %}">
				<!-- search -->
				<div class="search">
				{% include 'recommend/portal_station_list.html' %}
				</div>
				<!-- /search -->

			</div>
			{% endif %}

			<div class="areaInfo__text u-only_sp">{{value.city.implant_lead}}</div>

			{% if value.recommends|length > 0 %}
			<div class="recommend">
				<ul class="recommend__list">
					{% include 'recommend/portal_city_recommend_row.html' %}
				</ul>
				{% include 'common/portal/pagenation.html' %}
			</div>
			{% endif %}

		</div>

	</article>
</main>
</div>
<!-- /contents -->

{% include 'common/portal/breadcrumb_sp.html' %}

<!-- pageTop -->
<div id="btnPagetop"><a href="#" class="btnPagetop__a" aria-label="ページトップに戻る"></a></div>
<!-- /pageTop -->

{% endblock %}
